@model EVA3.Models.Categoria
@{
    ViewBag.Title = "Modificar";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Modificar</h2>

<div class="row">
    <div class="col-lg-6">
        <form method="post" action="@Url.Action("GuardarModificar", "Categorias")">


            <div class="form-group">
                <label for="idCategoria">ID Categoría</label>
                <input type="number" name="idCategoria" class="form-control" value="@Model.Id" readonly />
            </div>
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input type="text" name="nombre" class="form-control" value="@Model.Nombre" />
            </div>

            <input type="submit" value="Guardar" class="btn btn-primary" />
        </form>

    </div>
</div>